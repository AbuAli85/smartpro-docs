{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "@types/express"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "../dist/server",
    "resolveJsonModule": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

