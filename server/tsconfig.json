{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["./**/*", "./types/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

